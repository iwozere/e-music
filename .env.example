# Domain Configuration
DOMAIN=e-music.win
API_SUBDOMAIN=api.e-music.win

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://api.e-music.win/auth/callback

# Security
JWT_SECRET=your_random_jwt_secret_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 days

# Database
DATABASE_URL=sqlite:////app/db/myspotify.db

# Storage Path (Host specific)
# Windows example: R:\e-music
# Linux example: /share/e-music
MUSIC_PATH=/share/e-music
